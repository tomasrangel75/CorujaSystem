
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper" style="margin-left:0">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Perfis
        </h1>
      
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-sm-12">

                <h4 style="border-bottom: 1px solid #c5c5c5;">
                    <i class="glyphicon glyphicon-circle-arrow-right">
                    </i>
                    Cadastro de Perfis
                </h4>

            </div>
        </div>


        <div class="row">

            <div class="col-sm-4" style="padding: 20px">

                @using (Html.BeginForm("CreateRole", "Admin", FormMethod.Post, new { @class = "", role = "form" }))
                {

                    @Html.AntiForgeryToken()



                    <div class="form-group">
                        Nome do Perfil
                        <input id="txtName" name="newRoleName" type="text" class="form-control input-sm" />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-info btn-primary" value="Criar Perfil" />
                    </div>

                }

                <div class="cleaner_h30"></div>
            </div>

        </div>


        <div class="row">

            <div id="result" class="col-sm-12">

            </div>

        </div>

        <div class="row">
            <div class="col-xs-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Lista de Perfis</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                        
                                <tr>
                          
                                    <th>Nome Perfil</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>@Html.ActionLink("Users", "ListOfUsers", "Admin", new { id = item.Id }, new { @class= "a" })</td>
                                    <td>@Html.ActionLink("Excluir", "DeleteRole", "Admin", new { id = item.Id }, new { @class = "a" })</td>

                                </tr>
                         }
                            </tbody>
                            <tfoot>
                                @*<tr>
                                    <th>Rendering engine</th>
                                    <th>Browser</th>
                                    <th>Platform(s)</th>
                                    <th>Engine version</th>
                                    <th>CSS grade</th>
                                </tr>*@
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
           
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

