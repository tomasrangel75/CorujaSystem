
@model CorujaPresentation.Models.ApplicationUser

@{
    ViewBag.Title = "Detalhes do usuário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalhes do usuário</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>Lista de perfis para esse usuário</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>No roles found for this user.</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Editar", "EditUser", new { id = Model.Id }) |
    @Html.ActionLink("Usuários", "ListOfUsers")
</p>



