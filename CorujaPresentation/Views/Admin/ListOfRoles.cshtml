@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Lista de perfis";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lista de perfis</h2>

<p>
    @Html.ActionLink("Adicionar perfil", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditRole", new { id = item.Id }) |
                @Html.ActionLink("Info", "RoleDetails", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "DeleteRole", new { id = item.Id })
            </td>
        </tr>
    }

</table>
