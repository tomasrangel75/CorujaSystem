@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Adicionar Perfil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<style type="text/css">
    #tbrole, .c {
        border: double;
    }
</style>

<section class="section section-gray">

    <div class="container">
        <h2 class="section-heading text-center">Perfis</h2>

        <div class="row">

            <div class="col-lg-4 col-md-4 col-sm-4">

                <h4 style="border-bottom: 1px solid #c5c5c5;">
                    <i class="glyphicon glyphicon-circle-arrow-right">
                    </i>
                    Cadastro de Perfis
                </h4>

                <div style="padding: 20px">


                    @using (Html.BeginForm("CreateRole", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        @Html.AntiForgeryToken()


                        <div class="form-group input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-hand-right">
                                </i>
                            </span>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Nome do Perfil" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })


                        </div>

                        <div class="form-group">

                            <input type="submit" class="btn btn-info btn-primary pull-right" value="Criar Perfil" />

                        </div>

                    }


                    <div class="cleaner_h30"></div>

                </div>

                <p class="help-block">
                    @Html.ActionLink("Lista de Perfis", "RoleList", "Admin")
                </p>

            </div>
        </div>

    </div>

</section>


