@model IEnumerable<CorujaPresentation.Models.ApplicationUser>

@{
    ViewBag.Title = "Lista de usuários";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Adicionar usuário", "AddUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditUser", new { id = item.Id }) |
                @Html.ActionLink("Info", "UserDetails", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
    }

</table>
