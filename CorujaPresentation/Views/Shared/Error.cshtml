@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = (!String.IsNullOrEmpty(ViewBag.StatusCode)) ? ViewBag.StatusCode : "500 Error";
}

<h1 class="error">@(!String.IsNullOrEmpty(ViewBag.StatusCode) ? ViewBag.StatusCode : "500 Error"):</h1>



<section id="Error" class="section section-gray">


    <div class="container">

        <h2 class="section-heading text-center">Canal Coruja</h2>

        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="">
                    <img src="~/Content/CorujaImages/avatar2.png" alt="Coruja">
                    
                    <p>httpContext.Response.StatusCode: @HttpContext.Current.Response.StatusCode</p>
                    <p>Action: @Model.ActionName</p>
                    <p>Controller: @Model.ControllerName</p>
                    <p>Model Exc Message: @Model.Exception.Message</p>
                   @* <p>Model Exc Stack Trace: @Model.Exception.StackTrace</p>*@

                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-4 text-center">
                <p>Entre em contato com a Coruja e reporte o erro ocorrido</p>
                <ul class="footer-posts list-unstyled">
                    <li class="footer-sprite">
                        <a href="mailto:contato@corujaedu.com.br?subject=[Fale%20com%20a%20Coruja]&amp;cco=christian@corujaedu.com.br" class="footer">contato@corujaedu.com.br</a>
                    </li>
                </ul>
            </div>
        </div>
      

     </div>

</section>

