
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="Perfil" class="section section-gray">


    <div class="container">

        <h2 class="section-heading text-center">Conta Coruja</h2>

        <div class="row">
            <div class="col-sm-12 col-md-12 alert-message alert-message-warning">


                <img src="~/Content/CorujaImages/avatar2.png" alt="Coruja">
                <h4>
                    Perfil
                </h4>
                @using (Html.BeginForm("LembrarSenha", "Conta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h5>Clique no link abaixo para alterar sua senha</h5>

                        <div class="col-xs-6">

                            <div class="form-group">

                                <div class="col-md-7">
                                    @Html.ActionLink("Alterar senha", "AlterarSenha", "Conta", null, new { @class = "a" })
                                </div>
                            </div>
                            
                        </div>
                }


            </div>
        </div>

    </div>

</section>




