@model CorujaSystem.VM.ResetPasswordViewModel
@{
    ViewBag.Title = "Redefinir senha";
}



<section id="RedefinirSenha" class="section section-gray">


    <div class="container">

        <h2 class="section-heading text-center">Conta Coruja</h2>

        <div class="row">
            <div class="col-sm-12 col-md-12 alert-message">

                   <img src="~/Content/CorujaImages/avatar2.png" alt="Coruja">
                    <h4>
                        Redefinir sua senha
                    </h4>

                    <div class="col-sm-12 col-md-12">

                        @using (Html.BeginForm("ResetSenha", "Conta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h5>Preencha os campos abaixo</h5>
                           
                            @Html.HiddenFor(model => model.Code)

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <div class="col-md-7">
                                        @Html.LabelFor(m => m.Email, new { @class = "" })

                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="col-md-7">
                                        @Html.LabelFor(m => m.Password, new { @class = "" })

                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-8">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })

                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="submit" class="btn btn-primary" value="Redefinir" />
                                    </div>
                                </div>

                            </div>

                        }

                    </div>
              

            </div>
        </div>
      
    </div>

</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
