@model CorujaSystem.VM.ChangePasswordViewModel
@{
    ViewBag.Title = "AlterarSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="AlterarSenha" class="section section-gray">


    <div class="container">

        <h2 class="section-heading text-center">Conta Coruja</h2>

        <div class="row">
            <div class="col-sm-12 col-md-12 alert-message">


                <img src="~/Content/CorujaImages/avatar2.png" alt="Coruja">
                <h4>
                    Alteração de Senha
                </h4>

                @using (Html.BeginForm("AlterarSenha", "Conta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

    
                    <div class="col-xs-6">

                        
                        <div class="form-group">
                            <div class="col-md-7">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "" })
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-md-7">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "" })
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                            </div>

                        </div>


                        <div class="form-group">
                            
                            <div class="col-md-7">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                           
                            
                        </div>


                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Alterar Senha" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                }


            </div>
        </div>

    </div>

</section>




