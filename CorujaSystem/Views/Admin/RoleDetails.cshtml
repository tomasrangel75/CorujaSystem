
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Detalhes do perfil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
   
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4>Lista de usuários nesse perfil</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>Nehum usuário encontrado nesse perfil.</p>
}

<table class="table">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Editar", "EditRole", new { id = Model.Id }) |
    @Html.ActionLink("Lista de perfis", "ListOfRoles", new { area = "", controller = "Admin" })

</p>



